{
 "manifest_version": 2,
 "version": "2.0.0",
 
 "name": "Mind the Gap", 
 "description": "A small extension designed to help with the arithmetic around adjacent conveyors!", 
 
 "icons": {
     "16": "icons/hh16.png",
     "22": "icons/hh22.png",
     "32": "icons/hh32.png",
     "48": "icons/hh48.png",
     "64": "icons/hh64.png",
     "128": "icons/hh128.png"     
 },
 
 "browser_action": {
    "default_popup": "html/popup.html",
    "default_title": "Gap Calculator Pop-up"
 },
 
 "permissions": [
     "notifications",
     "tabs",
     "activeTab",
     "https://ajax.googleapis.com/"
 ]
}